{
  "extends": [
    "airbnb",
    "prettier",
    "plugin:node/recommended",
    "plugin:promise/recommended"
  ],
  "plugins": [
    "prettier",
    "node",
    "promise"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "no-var": "off",
    "promise/avoid-new": "off"
  }
}
